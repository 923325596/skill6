<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 全局配置 -->
	<settings>
		<!-- 启用二级缓存 -->
		<setting name="cacheEnabled" value="true" />
		<!--是否开启自动驼峰命名规则（camel case）映射,下划线到驼峰 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<!-- 指定日志为log4j2 -->
		<setting name="logImpl" value="SLF4J" />
		<!-- 对于未知的SQL查询,允许返回不同的结果集以达到通用的效果 -->
		<setting name="multipleResultSetsEnabled" value="true" />
		<!-- 打开延迟加载的开关 -->
		<setting name="lazyLoadingEnabled" value="true" />
		<!-- 将积极加载改为消极加载,即延迟加载 -->
		<setting name="aggressiveLazyLoading" value="false" />
	</settings>

	<typeAliases>
		<!-- 系统实体类别名 -->
		<typeAlias alias="ArticleComment" type="cn.skill6.common.entity.po.ArticleComment" />
		<typeAlias alias="ArticleInfo" type="cn.skill6.common.entity.po.ArticleInfo" />
		<typeAlias alias="ArticleReadRecord" type="cn.skill6.common.entity.po.ArticleReadRecord" />
		<typeAlias alias="CategoryInfo" type="cn.skill6.common.entity.po.CategoryInfo" />
		<typeAlias alias="DiscussArea" type="cn.skill6.common.entity.po.DiscussArea" />
		<typeAlias alias="FileDownload" type="cn.skill6.common.entity.po.FileDownload" />
		<typeAlias alias="ImageUpload" type="cn.skill6.common.entity.po.ImageUpload" />
		<typeAlias alias="LoginRecord" type="cn.skill6.common.entity.po.LoginRecord" />
		<typeAlias alias="ThumbsUpRecord" type="cn.skill6.common.entity.po.ThumbsUpRecord" />
		<typeAlias alias="UserInfo" type="cn.skill6.common.entity.po.UserInfo" />
		<typeAlias alias="UserModifyRecord" type="cn.skill6.common.entity.po.UserModifyRecord" />
		<typeAlias alias="UserPrivacyInfo" type="cn.skill6.common.entity.po.UserPrivacyInfo" />
		<typeAlias alias="VersionInfo" type="cn.skill6.common.entity.po.VersionInfo" />
		<typeAlias alias="VisitRecord" type="cn.skill6.common.entity.po.VisitRecord" />
		<typeAlias alias="VisitStatistics" type="cn.skill6.common.entity.po.VisitStatistics" />
	</typeAliases>

	<!-- 处理枚举类 -->
	<typeHandlers>
		<typeHandler javaType="cn.skill6.common.entity.enums.LoginType" handler="cn.skill6.website.mybatis.GeneralStateFieldHandler" />
	</typeHandlers>
</configuration>